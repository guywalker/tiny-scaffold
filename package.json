{
  "name": "tiny-scaffold",
  "version": "0.0.2",
  "description": "A tiny scaffolder to automate common additions to a codebase.",
  "keywords": [
    "scaffold",
    "scaffolder",
    "scaffolding",
    "template",
    "templates"
  ],
  "homepage": "https://github.com/guywalker/tiny-scaffold",
  "repository": {
    "type": "git",
    "url": "https://github.com/guywalker/tiny-scaffold.git"
  },
  "author": {
    "name": "Guy Walker"
  },
  "private": false,
  "license": "MIT",
  "main": "./dist/tiny-scaffold.cjs",
  "module": "./dist/tiny-scaffold.mjs",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build && dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint:scripts": "eslint . --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier . --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix",
    "format": "npm run format:scripts && npm run format:styles"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/jsdom": "^20.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "dts-bundle-generator": "^7.1.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "vite": "^4.0.4",
    "vitest": "^0.28.5"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
